@model Trail

<table>
   <thead>
      <tr>
         <td class="text-center" colspan="2">
            <h2> Delete Trail </h2>
         </td>
      </tr>
      <tr>
         <td colspan="2"> <hr /> </td>
      </tr>
   </thead>

   <tbody>
      <tr>
         <th class="text-right"> Peak: </th>
         <td> @Model.Peak.Name </td>
      </tr>
      <tr>
         <th class="text-right"> Trail Name: </th>
         <td> @Model.Name </td>
      </tr>
      <tr>
         <th class="text-right"> Starting Elevation: </th>
         <td> @Model.StartingElevation.ToString("N0") </td>
      </tr>
      <tr>
         <th class="text-right"> Distance: </th>
         <td> @Model.Distance </td>
      </tr>
   </tbody>

   <tfoot>
      <tr>
         <td colspan="2"> <hr /> </td>
      </tr>
      <tr>
         <th class="text-center" colspan="2"> Are You Sure? </th>
      </tr>
      <tr>
         <td class="text-center" colspan="2">
            <form method="post">
               <input type="hidden" asp-for="Id" />
               <input type="hidden" asp-for="PeakId" />
               <input type="submit" class="btn-sm btn-danger m-1" value="Delete" />
               <a asp-action="Detail" asp-route-trailId="@Model.Id" class="btn-sm btn-secondary m-1"> Cancel </a>
            </form>
         </td>
      </tr>
   </tfoot>
</table>
