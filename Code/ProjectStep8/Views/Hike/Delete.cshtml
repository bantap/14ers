@model Hike

<fieldset class="border custom-control-inline p-2 shadow align-top mb-4">
   <legend> Delete Hike </legend>

   <table>
      <tbody>
         <tr>
            <th class="text-right"> <span class="m-1"> Date: </span> </th>
            <td> <span class="m-1"> @Model.Date?.ToString("MM-dd-yyyy") </span> </td>
         </tr>

         <tr>
            <th class="text-right"> <span class="m-1"> Peak: </span> </th>
            <td> <span class="m-1"> @Model.Trail.Peak.Name </span> </td>
         </tr>

         <tr>
            <th class="text-right"> <span class="m-1"> Trail: </span> </th>
            <td> <span class="m-1"> @Model.Trail.Name </span> </td>
         </tr>

         <tr>
            <th class="text-right"> <span class="m-1"> Trail Condition: </span> </th>
            <td> <span class="m-1"> @Model.TrailCondition </span> </td>
         </tr>

         <tr>
            <th class="text-right"> <span class="m-1"> Weather: </span> </th>
            <td> <span class="m-1"> @Model.Weather </span> </td>
         </tr>

         <tr>
            <th class="text-right"> <span class="m-1"> Notes: </span> </th>
            <td> <span class="m-1"> @Model.Notes </span> </td>
         </tr>
      </tbody>

      <tfoot>
         <tr> <td colspan="2"> <hr /> </td> </tr>

         <tr>
            <th class="text-center" colspan="2"> <span class="m-1"> Are You Sure? </span> </th>
         </tr>

         <tr>
            <td class="text-center" colspan="2">
               <form method="post">
                  <input type="hidden" asp-for="Id" />
                  <input type="submit" class="btn btn-sm btn-danger m-1" value="Delete" />
                  <a asp-controller="Hike" asp-action="Detail" asp-route-hikeId="@Model.Id" class="bth btn-sm btn-secondary m-1"> Cancel </a>
               </form>
            </td>
         </tr>
      </tfoot>
   </table>
</fieldset>
