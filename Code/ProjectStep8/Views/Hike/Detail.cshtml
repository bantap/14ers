@model Hike

<fieldset class="border custom-control-inline p-2 shadow">
   <legend> Hike Detail </legend>

   <table>
      <partial name="_DetailBody" model="@Model" />

      <tfoot>
         <tr> <td colspan="2"> <hr /> </td> </tr>

         <tr>
            <td class="text-center" colspan="2">
               <a asp-controller="Hike" asp-action="Edit"   asp-route-hikeId="@Model.Id" class="btn-sm btn-warning   m-1"> Edit   </a>
               <a asp-controller="Hike" asp-action="Delete" asp-route-hikeId="@Model.Id" class="btn-sm btn-danger    m-1"> Delete </a>
               <a asp-controller="Hike" asp-action="Index"                               class="btn-sm btn-secondary m-1"> Back   </a>
            </td>
         </tr>
      </tfoot>
   </table>
</fieldset>
