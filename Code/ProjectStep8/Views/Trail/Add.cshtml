@model Trail

<fieldset class="border custom-control-inline p-2 shadow align-top mb-4">
   <legend>
      Add Trail
   </legend>

   <form method="post">
      <input type="hidden" asp-for="PeakId" />

      <table>
         <thead>
            <tr>
               <td colspan="2">
                  <div asp-validation-summary="All">
                  </div>
               </td>
            </tr>
         </thead>

         <tbody>
            <tr>
               <th class="text-right"> Peak: </th>
               <td> @Model.Peak.Name </td>
            </tr>
            <tr>
               <th class="text-right"> Trail Name: </th>
               <td> <input asp-for="Name" placeholder="Trail Name" /> </td>
            </tr>
            <tr>
               <th class="text-right"> Starting Elevation: </th>
               <td> <input asp-for="StartingElevation" placeholder="Trail Starting Elevation" /> </td>
            </tr>
            <tr>
               <th class="text-right"> Distance: </th>
               <td> <input asp-for="Distance" placeholder="Trail Distance" /> </td>
            </tr>
            <tr>
               <td colspan="2"> <hr /> </td>
            </tr>
            <tr>
               <td class="text-center" colspan="2">
                  <input class="btn-sm btn-primary m-1" type="submit" value="Add Trail" />
                  <a asp-controller="Peak" asp-action="Detail" asp-route-peakId="@Model.PeakId" class="btn-sm btn-secondary m-1"> Cancel </a>
               </td>
            </tr>
         </tbody>
      </table>
   </form>
</fieldset>
