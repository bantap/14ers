@model Trail

<tbody>
   <tr>
      <th class="text-right"> <span class="m-1"> Peak: </span> </th>
      <td> <span class="m-1"> @Model.Peak.Name </span> </td>
   </tr>

   <tr>
      <th class="text-right"> <span class="m-1"> Trail Name: </span> </th>
      <td> <span class="m-1"> @Model.Name </span> </td>
   </tr>

   <tr>
      <th class="text-right"> <span class="m-1"> Starting Elevation: </span> </th>
      <td> <span class="m-1"> @Model.StartingElevation.ToString("N0") </span> </td>
   </tr>

   <tr>
      <th class="text-right"> <span class="m-1"> Distance: </span> </th>
      <td> <span class="m-1"> @Model.Distance </span> </td>
   </tr>
</tbody>
