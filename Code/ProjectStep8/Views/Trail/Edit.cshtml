@model Trail

<fieldset class="border custom-control-inline p-2 shadow">
   <legend> Edit Trail </legend>

   <form method="post">
      <input type="hidden" asp-for="Id" />
      <input type="hidden" asp-for="PeakId" />

      <table>
         <partial name="_AddEditHeadBody" />

         <tfoot>
            <tr> <td colspan="2"> <hr /> </td> </tr>

            <tr>
               <td class="text-center" colspan="2">
                  <input class="btn btn-sm btn-warning" type="submit" value="Save" />
                  <a asp-action="Detail" asp-route-trailId="@Model.Id" class="btn btn-sm btn-secondary"> Cancel </a>
               </td>
            </tr>
         </tfoot>
      </table>
   </form>
</fieldset>
